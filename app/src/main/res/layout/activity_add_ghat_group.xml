<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddGhatGroupActivity">


    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary">

        <Button
            android:id="@+id/go_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_back_arrow"
            android:backgroundTint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Add Ghat"
            android:textColor="@color/white"
            android:textSize="25dp" />


        <Button
            android:id="@+id/delete_cart"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_delete"
            android:backgroundTint="@color/white"
            android:visibility="gone" />


    </RelativeLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:theme="@style/MatEditTextStyle">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Group Name :-"
                android:textSize="20dp" />


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:hint="Group Name"
                app:boxStrokeColor="@color/darkGreen"
                app:boxStrokeErrorColor="@color/darkGreen"
                app:hintTextAppearance="@style/MatEditTestStyleTextLabel"
                app:hintTextColor="@color/darkGreen"
                app:startIconDrawable="@drawable/ic_name">

                <EditText
                    android:id="@+id/edtGroupName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/darkGreen"
                    android:ems="15"
                    android:inputType="text"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Patient Age -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Total Amount :-"
                android:textSize="20dp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:hint="Total Amount"
                app:boxStrokeColor="@color/darkGreen"
                app:boxStrokeErrorColor="@color/darkGreen"
                app:hintTextAppearance="@style/MatEditTestStyleTextLabel"
                app:hintTextColor="@color/darkGreen"
                app:startIconDrawable="@drawable/ic_name">

                <EditText
                    android:id="@+id/edtTotalAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/darkGreen"
                    android:ems="15"
                    android:inputType="number"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Patient Weight -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Monthly Amount"
                android:textSize="20dp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:hint="Monthly Saving Amount"
                app:boxStrokeColor="@color/darkGreen"
                app:boxStrokeErrorColor="@color/darkGreen"
                app:hintTextAppearance="@style/MatEditTestStyleTextLabel"
                app:hintTextColor="@color/darkGreen"
                app:startIconDrawable="@drawable/ic_name">

                <EditText
                    android:id="@+id/edtMonthlyAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/darkGreen"
                    android:ems="15"
                    android:inputType="number"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Patient Height -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Total Members Applicable"
                android:textSize="20dp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:hint="Total Members Applicable"
                app:boxStrokeColor="@color/darkGreen"
                app:boxStrokeErrorColor="@color/darkGreen"
                app:hintTextAppearance="@style/MatEditTestStyleTextLabel"
                app:hintTextColor="@color/darkGreen"
                app:startIconDrawable="@drawable/ic_name">

                <EditText
                    android:id="@+id/edtTotalMembers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/darkGreen"
                    android:ems="15"
                    android:inputType="number"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:theme="@style/MatEditTextStyle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:text="Group Started In"
                        android:textSize="20dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        app:cardElevation="8dp">


                        <RelativeLayout
                            android:id="@+id/rel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/round_border_blue">

                            <ImageView
                                android:id="@+id/btnDate"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_toEndOf="@id/txtDate"
                                android:layout_toRightOf="@id/txtDate"
                                android:background="@color/blue_active"
                                android:src="@drawable/ic_date"
                                app:tint="@color/white" />

                            <TextView
                                android:id="@+id/txtDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="3dp"
                                android:gravity="center_horizontal"
                                android:text="dd/mm/yyyy"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="20dp" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>


                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:theme="@style/MatEditTextStyle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:text="Time"
                        android:textSize="20dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        app:cardElevation="8dp">


                        <RelativeLayout
                            android:id="@+id/rel1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/round_border_blue">

                            <ImageView
                                android:id="@+id/btnTime"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_toEndOf="@id/txtTime"
                                android:layout_toRightOf="@id/txtTime"
                                android:background="@color/blue_active"
                                android:src="@drawable/ic_date"
                                app:tint="@color/white" />

                            <TextView
                                android:id="@+id/txtTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="3dp"
                                android:gravity="center_horizontal"
                                android:text="HH:MM"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="20dp" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Name Of President"
                android:textSize="20dp" />


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:hint="Enter Name Of President"
                app:boxStrokeColor="@color/darkGreen"
                app:boxStrokeErrorColor="@color/darkGreen"
                app:hintTextAppearance="@style/MatEditTestStyleTextLabel"
                app:hintTextColor="@color/darkGreen"
                app:startIconDrawable="@drawable/ic_baseline_local_hospital_24">

                <EditText
                    android:id="@+id/edtNameOfPresident"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/darkGreen"
                    android:ems="15"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Mobile Of President"
                android:textSize="20dp" />


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:hint="Enter Name Of President"
                app:boxStrokeColor="@color/darkGreen"
                app:boxStrokeErrorColor="@color/darkGreen"
                app:hintTextAppearance="@style/MatEditTestStyleTextLabel"
                app:hintTextColor="@color/darkGreen"
                app:startIconDrawable="@drawable/ic_baseline_local_hospital_24">

                <EditText
                    android:id="@+id/edtMobilePresident"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/darkGreen"
                    android:ems="15"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Chairman's Email"
                android:textSize="20dp" />


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:hint="Chairman's Email"
                app:boxStrokeColor="@color/darkGreen"
                app:boxStrokeErrorColor="@color/darkGreen"
                app:hintTextAppearance="@style/MatEditTestStyleTextLabel"
                app:hintTextColor="@color/darkGreen"
                app:startIconDrawable="@drawable/ic_baseline_local_hospital_24">

                <EditText
                    android:id="@+id/edtChairmanEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/darkGreen"
                    android:ems="15"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Set Password :-"
                android:textSize="20dp" />


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:hint="Enter Password"
                app:boxStrokeColor="@color/darkGreen"
                app:boxStrokeErrorColor="@color/darkGreen"
                app:hintTextAppearance="@style/MatEditTestStyleTextLabel"
                app:hintTextColor="@color/darkGreen"
                app:startIconDrawable="@drawable/password">

                <EditText
                    android:id="@+id/edtGroupPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="@color/darkGreen"
                    android:ems="15"
                    android:inputType="textPassword"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Upload Report -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:text="Upload Prescription:"
                        android:textSize="16dp" />

                    <Button
                        android:id="@+id/btnUploadPrescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/rounded_outer_green_shade"
                        android:paddingStart="20dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="10dp"
                        android:text="Choose File"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Upload Report -->
                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:text="Upload Report:"
                        android:textSize="15dp" />

                    <Button
                        android:id="@+id/btnUploadReport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/rounded_outer_green_shade"
                        android:paddingStart="20dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="10dp"
                        android:text="Choose File"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/register_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="16dp"
                app:cardBackgroundColor="@color/darkGreen"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp">

                <Button
                    android:id="@+id/confirm_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/darkGreen"
                    android:ems="15"
                    android:text="Add Bachat Ghat"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>